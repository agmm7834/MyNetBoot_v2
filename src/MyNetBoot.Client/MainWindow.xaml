<Window x:Class="MyNetBoot.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MyNetBoot.Client.ViewModels"
        Title="MyNetBoot Client" 
        Height="700" Width="1100"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" Padding="24,16"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Border Width="40" Height="40" CornerRadius="10" Background="{StaticResource PrimaryGradientBrush}"
                            VerticalAlignment="Center">
                        <TextBlock Text="&#xE7FC;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="White"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="MyNetBoot" FontSize="20" FontWeight="Bold" 
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="{Binding ClientName}" FontSize="12" 
                                   Foreground="{StaticResource TextMutedBrush}"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Connection -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                        <Ellipse Width="10" Height="10" Margin="0,0,8,0" VerticalAlignment="Center">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                            <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <TextBlock Text="{Binding ConnectionStatus}" FontSize="13"
                                   Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <TextBox Text="{Binding ServerAddress, UpdateSourceTrigger=PropertyChanged}" 
                             Width="120" Padding="10,8" FontSize="13"
                             Background="{StaticResource CardBrush}" Foreground="{StaticResource TextPrimaryBrush}"
                             BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                             VerticalAlignment="Center">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    
                    <Button Margin="8,0,0,0" Padding="16,10" FontSize="13" Cursor="Hand"
                            Command="{Binding ConnectCommand}"
                            Visibility="{Binding IsNotConnected, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <TextBlock Text="Ulash"/>
                    </Button>
                    
                    <Button Margin="8,0,0,0" Padding="16,10" FontSize="13" Cursor="Hand"
                            Command="{Binding DisconnectCommand}"
                            Visibility="{Binding IsConnected, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource CardBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6"
                                                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <TextBlock Text="Uzish"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Login Form Overlay -->
            <Border Grid.ColumnSpan="2" Background="#E0000000" Panel.ZIndex="100"
                    Visibility="{Binding ShowLoginForm, Converter={StaticResource BoolToVisibilityConverter}}">
                <Border Background="{StaticResource CardBrush}" CornerRadius="16" 
                        Padding="40" MaxWidth="400" MaxHeight="500"
                        VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="🔐" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        <TextBlock Text="Tizimga kirish" FontSize="24" FontWeight="Bold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" 
                                   HorizontalAlignment="Center" Margin="0,0,0,24"/>
                        
                        <!-- Telefon raqam -->
                        <TextBlock Text="Telefon raqam" FontSize="13" 
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding TelefonRaqam, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="12,10" FontSize="14"
                                 Background="{StaticResource SurfaceBrush}" 
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        
                        <!-- Parol -->
                        <TextBlock Text="Parol" FontSize="13" 
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,16,0,8"/>
                        <PasswordBox x:Name="PasswordBox" Padding="12,10" FontSize="14"
                                     Background="{StaticResource SurfaceBrush}" 
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                     PasswordChanged="PasswordBox_PasswordChanged">
                            <PasswordBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </PasswordBox.Resources>
                        </PasswordBox>
                        
                        <!-- Xato xabari -->
                        <TextBlock Text="{Binding LoginError}" FontSize="13" 
                                   Foreground="{StaticResource ErrorBrush}" 
                                   TextWrapping="Wrap" Margin="0,12,0,0"
                                   Visibility="{Binding LoginError, Converter={StaticResource NullToVisibilityConverter}}"/>
                        
                        <!-- Kirish tugmasi -->
                        <Button Content="KIRISH" Margin="0,24,0,0" Padding="16,12" FontSize="14"
                                Command="{Binding LoginCommand}" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="8"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </Border>
            
            <!-- User Info Bar (when logged in) -->
            <Border Grid.ColumnSpan="2" Background="{StaticResource SuccessBrush}" 
                    Padding="16,8" VerticalAlignment="Top" Panel.ZIndex="50"
                    Visibility="{Binding IsLoggedIn, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock Text="👤" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding UserFullName}" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="White" VerticalAlignment="Center"/>
                        <Border Background="White" CornerRadius="12" Padding="12,4" Margin="16,0,0,0">
                            <TextBlock Text="{Binding BalansText}" FontSize="13" FontWeight="Bold" 
                                       Foreground="{StaticResource SuccessBrush}"/>
                        </Border>
                    </StackPanel>
                    
                    <Button Content="O'yinni tugatish" HorizontalAlignment="Right" Padding="16,6" 
                            FontSize="13" Cursor="Hand" Command="{Binding EndSessionCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Game List -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Padding="16,12" BorderThickness="0,0,0,1"
                            BorderBrush="{StaticResource BorderBrush}">
                        <TextBlock Text="O'yinlar Kutubxonasi" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </Border>
                    
                    <ListBox Grid.Row="1" ItemsSource="{Binding Games}" 
                             SelectedItem="{Binding SelectedGame}"
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource GameCardStyle}" Padding="12" Margin="8,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Width="50" Height="50" CornerRadius="8" 
                                                Background="{StaticResource PrimaryGradientBrush}">
                                            <TextBlock Text="&#xE7FC;" FontFamily="Segoe MDL2 Assets" 
                                                       FontSize="22" Foreground="White"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock FontSize="12" Foreground="{StaticResource TextMutedBrush}">
                                                <Run Text="{Binding Category}"/> • <Run Text="{Binding Version}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                    
                    <!-- Empty State -->
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                Visibility="{Binding IsNotConnected, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="&#xE774;" FontFamily="Segoe MDL2 Assets" FontSize="48"
                                   Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Serverga ulaning" FontSize="14" Margin="0,12,0,0"
                                   Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Game Details -->
            <Grid Grid.Column="1" Margin="32">
                <!-- No Game Selected -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                            Visibility="{Binding HasSelectedGame, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <TextBlock Text="&#xE7FC;" FontFamily="Segoe MDL2 Assets" FontSize="72"
                               Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="O'yin tanlang" FontSize="18" Margin="0,16,0,0"
                               Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Game Info -->
                <Grid Visibility="{Binding HasSelectedGame, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Game Header -->
                    <StackPanel Grid.Row="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Width="120" Height="120" CornerRadius="16" 
                                    Background="{StaticResource PrimaryGradientBrush}">
                                <TextBlock Text="&#xE7FC;" FontFamily="Segoe MDL2 Assets" 
                                           FontSize="48" Foreground="White"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" Margin="24,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding SelectedGame.Name}" FontSize="32" FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <Border Background="{StaticResource CardBrush}" CornerRadius="6" Padding="12,6">
                                        <TextBlock Text="{Binding SelectedGame.Category}" FontSize="13"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </Border>
                                    <Border Background="{StaticResource CardBrush}" CornerRadius="6" Padding="12,6" Margin="8,0,0,0">
                                        <TextBlock FontSize="13" Foreground="{StaticResource TextSecondaryBrush}">
                                            <Run Text="v"/><Run Text="{Binding SelectedGame.Version}"/>
                                        </TextBlock>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Description -->
                    <Border Grid.Row="1" Background="{StaticResource CardBrush}" CornerRadius="12" 
                            Padding="20" Margin="0,24,0,24">
                        <StackPanel>
                            <TextBlock Text="Tavsif" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>
                            <TextBlock Text="{Binding SelectedGame.Description}" FontSize="14"
                                       Foreground="{StaticResource TextPrimaryBrush}" TextWrapping="Wrap"
                                       LineHeight="24"/>
                            <TextBlock Text="O'yin tavsifi mavjud emas" FontSize="14"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       Visibility="{Binding SelectedGame.Description, Converter={StaticResource NullToVisibilityConverter}}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Play Button -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="O'YNASH" Style="{StaticResource PlayButtonStyle}"
                                Command="{Binding PlayGameCommand}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
